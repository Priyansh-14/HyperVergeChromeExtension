{
  "manifest_version": 3,
  "name": "Digital Notice Board",
  "description": "Set the Homepage to a Digital Notice Board with multiple widgets.",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
